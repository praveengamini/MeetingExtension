{
  "manifest_version": 3,
  "name": "My Vite React Extension",
  "version": "1.0",
  "description": "A Vite + React Chrome Extension with microphone access",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
  }
}

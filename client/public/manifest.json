{
  "manifest_version": 3,
  "name": "Meeting Recorder",
  "version": "1.0.0",
  "description": "Extension for recording meetings with speech-to-text and email dispatch",
 "permissions": [
  "notifications",
  "tabs",
  "windows",
  "activeTab",
  "storage",
  "downloads",
  "microphone"
],

  "host_permissions": [
    "https://meet.google.com/*",
    "https://*.zoom.us/*",
    "https://teams.microsoft.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Meeting Recorder"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*",
        "https://*.zoom.us/*",
        "https://teams.microsoft.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["*.js", "*.css"],
      "matches": ["https://meet.google.com/*", "https://*.zoom.us/*", "https://teams.microsoft.com/*"]
    }
  ]
}

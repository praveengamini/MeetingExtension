{
  "manifest_version": 3,
  "name": "Audio Recorder",
  "version": "1.0",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "microphone"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
